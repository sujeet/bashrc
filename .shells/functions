# Function to install AUR packages.
function install-aur () {
    # Takes the url of the package as argument.
    # Alternately, it can also take the packagename
    # as argument also, but it might or might not work.
    # Bcause it is based on assumption that a package
    # named sujeet will be found at
    # http://aur.archlinux.org/packages/su/sujeet/sujeet.tar.gz
    # that is, the first two letters appear after /packages/

    mkdir -p ~/builds
    curr_dir=$(pwd)
    cd ~/builds

    # Check whether the argument is a package-name or an url
    # to the package. (assuming package names don't contain
    # "." while the urls always do.
    case $1 in
        *.*) 
            pkg_url=$1 
            ;;
        *)   
            pkg_url=http://aur.archlinux.org/packages/${1:0:2}/${1}/${1}.tar.gz
            ;;
    esac

    # Download
    wget $pkg_url

    pkg_file=$(basename $pkg_url)
    extract $pkg_file

    dir_name=${pkg_file%%.*}    # get the filename without extension.
    cd $dir_name
    makepkg -s
    install-pkg *.pkg.tar.xz
    cd $curr_dir
}

function extract () {
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)  tar xjf    $1 ;;                             
            *.tar.gz)   tar xzf    $1 ;;                              
            *.tar.xz)   tar Jxvf   $1 ;;                              
            *.bz2)      bunzip2    $1 ;;                         
            *.rar)      unrar x    $1 ;;                           
            *.gz)       gunzip     $1 ;;                           
            *.tar)      tar xf     $1 ;;                          
            *.tbz2)     tar xjf    $1 ;;                        
            *.tgz)      tar xzf    $1 ;;                         
            *.zip)      unzip      $1 ;;                           
            *.Z)        uncompress $1 ;;                                
            *)          echo "'$1' cannot be extracted via extract()" ;; 
        esac
    else
        echo "'$1' is not a valid file"
    fi
}


function psg() {
    if [ ! -z $1 ] ; then
        echo "Grepping for processes matching $1..."
        ps aux | grep $1 
    else
        echo "!! Need name to grep for"
    fi
}
